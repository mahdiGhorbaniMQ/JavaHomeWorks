<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.example.e1.EmployeeView"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="25" vgap="20">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text text="Employee Form"
          GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Label text="Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="nameField"
          GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Experience:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="experienceField"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Salary:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="salaryField"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Staff:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="staffField"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Job Title:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="jobTitleField"
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Text fx:id="error" text="Ok!"
          GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Add"
                onAction="#add"/>
    </HBox>

    <FlowPane fx:id="container"
              GridPane.columnIndex="0" GridPane.rowIndex="9"
              GridPane.columnSpan="2" GridPane.rowSpan="20">

    </FlowPane>
</GridPane>